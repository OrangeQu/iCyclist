<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icyclist.server.mapper.PostLikeMapper">

    <insert id="insert">
        INSERT INTO post_like (post_id, user_id)
        VALUES (#{postId}, #{userId})
    </insert>

    <delete id="delete">
        DELETE FROM post_like
        WHERE post_id = #{postId} AND user_id = #{userId}
    </delete>

    <select id="findByPostId" resultType="com.icyclist.server.model.PostLike">
        SELECT * FROM post_like WHERE post_id = #{postId}
    </select>

    <select id="exists" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM post_like WHERE post_id = #{postId} AND user_id = #{userId})
    </select>

</mapper>




















