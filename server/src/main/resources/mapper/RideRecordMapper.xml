<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icyclist.server.mapper.RideRecordMapper">

    <resultMap id="RideRecordResultMap" type="com.icyclist.server.model.RideRecord">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="durationSeconds" column="duration_seconds"/>
        <result property="distanceMeters" column="distance_meters"/>
        <result property="averageSpeedKmh" column="average_speed_kmh"/>
        <result property="title" column="title"/>
        <result property="createdAt" column="created_at"/>
        <result property="trackPoints" column="track_points"
                typeHandler="com.icyclist.server.handler.TrackPointListTypeHandler"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ride_record (user_id, start_time, end_time, duration_seconds, distance_meters, average_speed_kmh, title, track_points)
        VALUES (
            #{userId},
            #{startTime},
            #{endTime},
            #{durationSeconds},
            #{distanceMeters},
            #{averageSpeedKmh},
            #{title},
            #{trackPoints, typeHandler=com.icyclist.server.handler.TrackPointListTypeHandler}
        )
    </insert>

    <select id="findById" resultMap="RideRecordResultMap">
        SELECT * FROM ride_record WHERE id = #{id}
    </select>

    <select id="findByUserId" resultMap="RideRecordResultMap">
        SELECT * FROM ride_record WHERE user_id = #{userId} ORDER BY start_time DESC
    </select>

</mapper>







