<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ICyclist"
        android:largeHeap="true"
        android:hardwareAccelerated="true"
        tools:targetApi="31">
        
        <!-- 高德地图API密钥 -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="${AMAP_API_KEY}" />
            
        <!-- 高德定位服务 -->
        <service android:name="com.amap.api.location.APSService" />
        
        <!-- 主容器Activity (Fragment导航容器) -->
        <activity
            android:name=".MainContainerActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <activity
            android:name=".EditProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
        <!-- 运动记录Activity -->
        <activity
            android:name=".SportTrackingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="运动中" />

        <activity
            android:name=".SportHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="运动历史" />

        <activity
            android:name=".TrackDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="轨迹详情" />

        <activity
            android:name=".CommunityActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".community.CreatePostActivity"
            android:exported="false"
            android:label="创建帖子"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />

        <activity
            android:name=".community.TopicListActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".community.TopicDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
    </application>

    <!-- 地图SDK（包含其搜索功能）需要的基础权限 -->
    
    <!--允许程序打开网络套接字-->
    <uses-permission android:name="android.permission.INTERNET"
        tools:ignore="ManifestOrder" />
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--允许程序访问WiFi网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- 其他定位相关权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--允许程序在后台访问位置信息-->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <!--允许程序启动前台服务-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- 存储权限 (如果需要保存轨迹等) -->
    <!--允许程序写入外部存储-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <!--允许程序读取外部存储-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    
</manifest>